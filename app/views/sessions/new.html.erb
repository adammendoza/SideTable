<div class="sign-in">
  <h2>Log In</h2>
  <%= form_for :user, url: {controller: :sessions, action: :create}  do |f| %>
    Email: <%= f.text_field :email %> <br>
    Password: <%= f.password_field :password %> <br>
    <%= f.submit "Log In" %>
  <% end %>
  <p><h3>Or Try It Out!</h3>
  <%= button_to "Guest Login", users_path, method: :post %></p>
</div>
<div id="content">
</div>
<script type="text/javascript">
  CurrentUser = {};
  <% if current_user %>
    CurrentUser.email = "<%= current_user.email %>";
    CurrentUser.id = "<%= current_user.id %>";
    CurrentUser.name = "<%= current_user.name %>";
  <% end %>
</script>
