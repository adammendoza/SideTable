<% var url="#games/"+game.id+"" %>
<div class="col-md-3 col-sm-4 col-xs-12 thumb">
  <a href="<%= url %>" class="thumbnail">
    <img class="img-responsive" src="<%= game.escape('image_url') %>" ></img>
  </a>
</div>
<div class="game-item-long-description col-md-9 col-sm-8 col-xs-12">
  <div class="row">
    <h3 class="col-md-5 col-sm-4 col-xs-6" >
      <a href="#/games/<%= game.escape('id') %>">
       <%= game.escape('title')%>
      </a>
    </h3>
    <div class="ratings-box">
      <div class="col-xs-6 col-md-4">
        <div class="community-rating-container row">
          <div class="community-rating">  </div>
        </div>
      </div>
    </div>
  </div>
  <% if( game.escape('designer')) { %>
    <p> Designed by <%= game.escape('designer') %> </p>
  <% } %>

  <p><% var desc = game.escape('description') %>
      <%= desc.slice(0,500) %><%
      if (desc.length > 500) { %>...<% } %>
     <a href="#/games/<%= game.escape('id') %>">View Full Description</a></p>

<small>
  <a href="javascript:void(0)" class="remove-button">
    Remove From This Shelf
  </a>
</small>
</div>

